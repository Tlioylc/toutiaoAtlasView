<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_news_bottom_view_content_ly"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/_news_bottom_view_content_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_f4f4f4_17_radius"
        android:paddingBottom="7dp"
        android:paddingEnd="42dp"
        android:paddingStart="14dp"
        android:paddingTop="7dp"
        android:text="@string/news_comment_input_hint"
        android:textColor="@color/grey_999999"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/_news_bottom_view_content_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/btn_article_comment" />

    <ImageView
        android:id="@+id/_news_bottom_view_content_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/btn_article_like" />

    <ImageView
        android:id="@+id/_news_bottom_view_content_collection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/btn_article_collection" />

    <ImageView
        android:id="@+id/_news_bottom_view_content_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/btn_article_share" />
</LinearLayout>